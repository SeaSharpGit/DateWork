                                      ImagePath="/CCMail;component/Images/收取.png" 
                                      Command="{x:Static ser:CommonCommands.RefreshMailCommand}">
                    <MenuItem Header="收取所有账号" Command="{x:Static ser:CommonCommands.RefreshMailsCommand}"/>
                </ctrl:MenuSplitButton>
                <ctrl:LogoTextButton Text="写邮件" ImageMargin="0,1,0,-1"
                                     ImagePath="/CCMail;component/Images/写邮件.png"
                                     Command="{x:Static ser:CommonCommands.CreateSendCommand}"/>
                <ctrl:LogoTextButton Text="回复" ImageMargin="0,0,0,0"
                                     ImagePath="/CCMail;component/Images/回复.png" 
