<mui:ModernWindow x:Class="DateWork.Windows.NoteWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  WindowStartupLocation="CenterScreen" WindowStyle="None"
                  Title="Note" Height="450" Width="800" Template="{DynamicResource WindowBaseStyle}" HorizontalAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Padding="0,0,5,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Margin="5,0,5,0" Height="26" Width="60" Content="确定" IsDefault="True"
                        Style="{StaticResource ChooseButton}"
                        Command="{Binding OKCommand}"/>
                <Button Margin="5,0,5,0" Height="26" Width="60" Content="取消" IsCancel="True"
                        Style="{StaticResource ChooseButton}"
                        Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</mui:ModernWindow>
