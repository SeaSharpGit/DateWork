<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:DateWork.Controls">

    <Style TargetType="ListBox">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style TargetType="ctrl:DayControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ctrl:DayControl">
                    <StackPanel HorizontalAlignment="Stretch" Background="{TemplateBinding Background}">
                        <TextBlock TextAlignment="Center" FontSize="26"
                                   Text="{TemplateBinding DayName}"/>
                        <TextBlock TextAlignment="Center" FontSize="12"
                                   Text="{TemplateBinding MonthDayName}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>




</ResourceDictionary>